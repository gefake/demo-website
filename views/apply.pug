extends _base.pug

block content

	section
		.column.is-full

	section.section.hero.is-fullheight
		.hero-head
			.container
				.column.box.is-radiusless
					.breadcrumb.is-centered
						ul
							li
								span.icon.is-small.has-text-primary
									i.fas.fa-home
								a(href=`/main`) Главная 
							li.is-active
								a Подача заявки
				.column.box.is-radiusless.is-full
					form(action="/app" method="post")
						.field
							p#modal-text Дата рождения
						.field
							.control
								input.input(type="date" name="age"  placeholder="дд.мм.гггг" required)
						.field
							p#modal-text Имел ли ты опыт в ролевой игре ранее?
						.field
							.select
								select(name="roleplay" required)
									//- option(value="" disabled selected) Имел ли ты опыт в РП ранее?
									option Да
									option Нет
						.field
							p#modal-text Твой пол
						.field
							.select
								select(name="gender" required)
									option Мужской
									option Женский
						.field
							p#modal-text На сколько баллов ты оцениваешь свои знания ролевой игры?
						.field
							.select
								select(name="options" required)
									option 1
									option 2
									option 3
									option 4
									option 5
									option 6
									option 7
									option 8
									option 9
									option 10
						.field
							p#modal-text Сколько времени ты планируешь уделять вайтлист-серверу?
						.field
							p#modal-text Твой SteamID
						.field
						input.input(maxlength="30" type="text" name="steamid" required)
						p#modal-help.help.is-block SteamID в формате "STEAM_0:0:00000000"
						a#modal-help.help.is-primary.is-block(href="https://forum.octothorp.team/topic/8546/%D0%BA%D0%B0%D0%BA-%D1%83%D0%B7%D0%BD%D0%B0%D1%82%D1%8C-%D1%81%D0%B2%D0%BE%D0%B9-steamid" target="_blank")
							p.text-modal Как узнать свой SteamID
						.field
							p#modal-text Ссылка на профиль форума Octothorp Team
						.field
						input.input(type="text" name="forumprofile" )
						a#modal-help.help.is-primary(href="https://forum.octothorp.team/login" target="_blank" required) Регистрация профиля
						.field
							p#modal-text Твой Discord
						.field
						input.input(maxlength="32" type="text" name="discordtag" )
						p#modal-help.help Discord-ник в формате "Nickname#0000"
						a#modal-help.help.is-primary(href="https://discordapp.com/login" target="_blank" required)
							p.text-modal Регистрация Discord
						.field
							p#modal-text Почему ты хочешь играть именно на ролевом проекте с белым списком участников? (Закрытом ролевом проекте с доступом по вайтлисту)
						.field
							textarea.textarea(type="text" name="question1" required)
						.field
							p#modal-text Если ты имел(а) опыт в ролевой игре, то в каких играх и/или на каких проектах ты играл(а)?
						.field
							textarea.textarea(type="text" name="question2" required)
						.field
							p#modal-text Развернутно расскажи о себе
						.field
							textarea.textarea(type="text" name="question3" required)
						.field
							p#modal-text Какой вклад ты бы мог(ла) внести в наше сообщество?
						.field
							textarea.textarea(type="text" name="question4" required)
						.field
							p#modal-text Опиши, что для тебя означает понятие "Ролевая игра"
						.field
							textarea.textarea(type="text" name="question5" required)
						.field
							p#modal-text Подробно распиши, как ты понимаешь п.8 правил основных положений сообщества?
						.field
							textarea.textarea(type="text" name="question6" required)
						.field
							.notification.is-warning
								p#modal-text
									| Будьте внимательны - подавая заявку, вы автоматически соглашаетесь с правилами сообщества ролевого проекта Платтсбург и с 
									a(href="https://wiki.octothorp.team/index.php?title=%D0%9F%D0%BB%D0%B0%D1%82%D1%82%D1%81%D0%B1%D1%83%D1%80%D0%B3:%D0%9B%D0%BE%D1%80_%D0%B8_%D1%81%D0%B5%D1%82%D1%82%D0%B8%D0%BD%D0%B3" target="_blank") лором, сеттингом города.
									|   Помимо этого, убедитесь, что все поля заполнены корректно, так как заявку на одном наборе можно подать только один раз.
						.field.is-grouped
							.control
								button.button.is-primary(type="submit")
									p.text-modal Отправить заявку

		style.

			body {
				opacity: 0;
			}

			#modal-text,#modal-help {
				padding-left: 0.2em;
			}

			#padding-top-1 {
				padding-top: 1em;
			}

			#padding-top-05 {
				padding-top: 0.5em;
			}


			#padding-top-2 {
				padding-top: 2em;
			}

			#padding-bot-1 {
				padding-top: 1em;
			}

			#padding-bot-05 {
				padding-top: 1.5em;
			}


			#padding-bot-2 {
				padding-top: 2em;
			}



